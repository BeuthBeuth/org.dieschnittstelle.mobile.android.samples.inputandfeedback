<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dieschnittstelle.mobile.android.inputandfeedback"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.InputAndFeedbackActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- these activities are called by directly addressing the class names -->
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.ViewOverlayActivity"
            android:label="@string/overlay_name" >
        </activity>
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.ViewTransitionActivity"
            android:label="@string/transition_name" >
        </activity>
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.ViewManipulationActivity"
            android:label="@string/manipulation_name" >
        </activity>
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.ViewMenusActivity"
            android:label="@string/menus_name" >
        </activity>
        <activity
            android:name="org.dieschnittstelle.mobile.android.inputandfeedback.ViewThreadingActivity"
            android:label="@string/threading_name" >
        </activity>
    </application>

</manifest>